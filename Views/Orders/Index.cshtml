@model IEnumerable<ConfectioneryManagementApp.Models.Order>

@{
    ViewData["Title"] = "Lista zamówień";
}

<h2>Pełna lista zamówień</h2>

<form method="get" class="mb-4">
    <div style="display: flex; gap: 1rem; align-items: flex-end;">
        <div>
            <label for="startDate">Data od:</label><br />
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div>
            <label for="endDate">Data do:</label><br />
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
        <div style="margin-top: 1.5rem;">
            <input type="checkbox" id="showCompleted" name="showCompleted" />
            <label for="showCompleted">Pokaż zrealizowane</label>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Filtruj</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Klient</th>
        <th>Telefon</th>
        <th>Data</th>
        <th>Dzień tygodnia</th>
        <th>Pozycje</th>
        <th>Kwota do zapłaty</th>
        <th>Edycja</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.ClientName</td>
            <td>@order.PhoneNumber</td>
            <td>@order.DeliveryDate.ToShortDateString()</td>
            <td>@order.DeliveryDate.ToString("dddd", new System.Globalization.CultureInfo("pl-PL"))</td>
            <td>@order.OrderItems</td>
            <td>@(order.TotalAmount.HasValue ? order.TotalAmount.Value.ToString("C") : "-")</td>
            <td>
                <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
            </td>
        </tr>
    }
    </tbody>
</table>
