@model IEnumerable<ConfectioneryManagementApp.Models.ViewModels.IngredientSummaryViewModel>

@{
    ViewData["Title"] = "Lista zakupowa";
}

<h2>Lista produktów do zakupu</h2>

<form method="get" class="mb-3">
    <div style="display: flex; gap: 1rem; align-items: flex-end;">
        <div>
            <label for="startDate">Data od:</label><br />
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div>
            <label for="endDate">Data do:</label><br />
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Filtruj</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered mt-3">
    <thead>
    <tr>
        <th>Składnik</th>
        <th>Łączna ilość</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.TotalAmount @item.Unit</td>
        </tr>
    }
    </tbody>
</table>